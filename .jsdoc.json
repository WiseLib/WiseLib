{
  "tags": {
      "allowUnknownTags": true
  },
  "source": {
      "exclude": [ "node_modules/" ],
      "includePattern": "lib/.+\\.js(doc)?$",
      "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": [ "plugins/markdown" ],
  "templates": {
    "systemName"            : "WiseLib Server",
    "footer"                : "Vrije Universiteit Brussel",
    "copyright"             :  "Â© 2014 WiseLib",
    "navType"               : "vertical",
    "theme"                 : "readable",
    "linenums"              : true,
    "analytics"             : { "ua": "UA-56218377-1", "domain": "wilma.vub.ac.be" },
    "collapseSymbols"       : false,
    "inverseNav"            : false,
    "outputSourceFiles"     : false,
    "outputSourcePath"      : true,
    "highlightTutorialCode" : true,
    "syntaxTheme"           : "dark"
  },
  "opts": {
    "destination": "doc/out",
    "recurse": true,
    "tutorials": "doc/tutorials"
  }
}
